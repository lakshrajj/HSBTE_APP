<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:screenOrientation="portrait"
    android:background="@drawable/branchbg2">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <Button
            android:textSize="20sp"
            android:backgroundTint="#4A148C"
            android:textColor="@color/buttontxtcolor"
            android:layout_marginTop="100dp"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Computer"
            android:shadowColor="@color/black"/>

        <Button
            android:textSize="20dp"
            android:backgroundTint="#6A1B9A"
            android:textColor="@color/buttontxtcolor"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Textile" />

        <Button
            android:id="@+id/button3"
            android:textSize="20sp"
            android:backgroundTint="#7B1FA2"
            android:textColor="@color/buttontxtcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Electrical"
            app:autoSizeTextType="uniform"/>

        <Button
            android:textSize="20dp"
            android:backgroundTint="#8E24AA"
            android:textColor="@color/buttontxtcolor"
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mechanical" />

        <Button
            android:textSize="20dp"
            android:backgroundTint="#9C27B0"
            android:textColor="@color/buttontxtcolor"
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Electronics" />

        <Button
            android:textSize="20dp"
            android:backgroundTint="#AB47BC"
            android:textColor="@color/buttontxtcolor"
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fashion" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9601906684931747/1532674291">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>